        {% include 'header' %}
      </header>
      <main
        id="MainContent"
        class="flex flex-col outline-none overflow-x-hidden max-w-full" 
        tabindex="-1"></main>
      {{ content_for_layout }}
      {% sections 'footer-group' %}
      <div class="l-overlay"></div>
      {% render 'mini-cart' %}
      {% render 'c-modal-window' %}
    </div> 
    <script src="{{ 'custom.js' | asset_url }}" defer></script>

