  <body
    x-data
    :class="$store.shopMainStore.body_no_scroll ? 'no-scroll' : ''"
    class="template-{{ template.name }} m-{{ template | replace: '.', '-' }}">
    
    <div id="l-main">
      {% section 'cart-drawer' %}
      <header
        id="id_header"
        class="
              bg-white
          top-0
          z-50
          b-header
          font-plusJakarta
          font-semibold
