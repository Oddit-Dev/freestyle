<div class="py-16 lg:pb-40">
  <div class="flex flex-col md:flex-row justify-center items-center gap-8 md:gap-0">
    <!-- Left Column (50%) -->
    <div class="md:w-[50%] md:pr-8 space-y-8 flex flex-col items-center sticky top-0">
      <div class="flex flex-col items-center lg:items-start">
        {% if section.settings.logo_1 != blank %}
          <img
            src="{{ section.settings.logo_1 | img_url: "master" }}"
            alt="{{ section.settings.logo_1.alt | escape }}"
            class="w-auto h-auto mb-6 max-w-[24rem] md:max-w-[36rem] md:-translate-x-[2rem]"
            loading="lazy"
            width="{{ section.settings.logo_1.width }}"
            height="{{ section.settings.logo_1.height }}">
        {% endif %}
        {% if section.settings.logo_2 != blank %}
          <img
            src="{{ section.settings.logo_2 | img_url: 'medium' }}"
            alt="{{ section.settings.logo_2.alt | escape }}"
            class="w-auto max-w-[30rem] md:max-w-full h-auto"
            loading="lazy"
            width="{{ section.settings.logo_2.width }}"
            height="{{ section.settings.logo_2.height }}">
        {% endif %}
      </div>
    </div>

    <!-- Right Column (50%) -->
    <div class="md:w-[50%]">
      {% for block in section.blocks %}
        <div class="scroll-block flex items-center mb-4 md:mb-[25px]">
          {% if block.settings.logo != blank and block.settings.logo_violet != blank %}
            <div class="logo-container mr-4">
              <img
                src="{{ block.settings.logo | img_url: 'master' }}"
                data-original="{{ block.settings.logo | img_url: 'master' }}"
                data-violet="{{ block.settings.logo_violet | img_url: 'master' }}"
                alt="{{ block.settings.logo.alt | escape }}"
                class="w-auto h-[4rem] md:h-[8rem] object-contain transition-all duration-100"
                loading="lazy"
                width="{{ block.settings.logo.width }}"
                height="{{ block.settings.logo.height }}">
            </div>
          {% endif %}

          {% if block.settings.logo_text != blank %}
            <div class="text-content">
              <p
                class="font-groteskNueMedium font-regular scroll-text ml-4 text-xl md:text-[6.6rem] leading-[0.8] transition-all duration-100"
                style="color: #262626; opacity: 0.3;">
                {{ block.settings.logo_text }}
              </p>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const blocks = document.querySelectorAll('.scroll-block');

    function updateActiveBlock() {
      const viewportHeight = window.innerHeight;
      const triggerPoint = viewportHeight / 2;

      blocks.forEach((block) => {
        const rect = block.getBoundingClientRect();
        const blockMiddle = rect.top + rect.height / 2;
        const img = block.querySelector('.logo-container img');
        const text = block.querySelector('.scroll-text');

        if (blockMiddle <= triggerPoint && blockMiddle > 0) {
          // Reset images and text styles
          blocks.forEach((b) => {
            const otherImg = b.querySelector('.logo-container img');
            const otherText = b.querySelector('.scroll-text');

            if (otherImg && otherImg.dataset.original) {
              otherImg.src = otherImg.dataset.original;
            }

            if (otherText) {
              otherText.style.color = '#262626';
              otherText.style.opacity = '0.3';
            }
          });

          // Set current block image and text
          if (img && img.dataset.violet) {
            img.src = img.dataset.violet;
          }

          if (text) {
            text.style.color = '#6638B7';
            text.style.opacity = '1';
          }
        }
      });
    }

    // Inicial: activa el primero
    if (blocks.length > 0) {
      const firstImg = blocks[0].querySelector('.logo-container img');
      const firstText = blocks[0].querySelector('.scroll-text');

      if (firstImg && firstImg.dataset.violet) {
        firstImg.src = firstImg.dataset.violet;
      }

      if (firstText) {
        firstText.style.color = '#6638B7';
        firstText.style.opacity = '1';
      }
    }

    window.addEventListener('scroll', function () {
      requestAnimationFrame(updateActiveBlock);
    });

    updateActiveBlock();
  });
</script>

{% schema %}
{
  "name": "Logo Feature Blocks",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_1",
      "label": "Logo Izquierdo 1"
    },
    {
      "type": "image_picker",
      "id": "logo_2",
      "label": "Logo Izquierdo 2"
    }
  ],
  "blocks": [
    {
      "type": "logo_block",
      "name": "Logo Block",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "image_picker",
          "id": "logo_violet",
          "label": "Logo en violeta"
        },
        {
          "type": "text",
          "id": "logo_text",
          "label": "Texto junto al logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo Feature Blocks",
      "blocks": [
        {
          "type": "logo_block"
        },
        {
          "type": "logo_block"
        },
        {
          "type": "logo_block"
        },
        {
          "type": "logo_block"
        }
      ]
    }
  ]
}
{% endschema %}
