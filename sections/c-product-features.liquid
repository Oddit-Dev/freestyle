<div class="bg-lila/30 py-16">
  <div class="container mx-auto px-4">
    <div class="flex overflow-x-auto md:grid md:grid-cols-2 lg:grid-cols-4 gap-8 pb-4 snap-x snap-mandatory">
      {% for block in section.blocks %}
        <div class="flex-none w-[75vw] md:w-auto snap-center" {{ block.shopify_attributes }}>
          <div class="flex flex-col items-center text-left">
            {% assign default_image = 'https://cdn.sanity.io/images/cn55vbgx/production/3ae438f53b23a68c57828b485a069e061b432011-3840x4800.jpg?w=600&h=750&q=80&fit=max&auto=format' %}
            
            <img 
              src="{% if block.settings.image %}{{ block.settings.image | img_url: '400x' }}{% else %}{{ default_image }}{% endif %}" 
              alt="{{ block.settings.title }}"
              class="w-full h-auto mb-6 rounded-2xl"
              width=""
              height=""
            >
            
            {% if block.settings.title != blank %}
              <h3 class="text-2xl text-core font-medium mb-2 md:mb-8 w-full">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.text != blank %}
              <p class="mb-4 text-left text-core font-extrabold">{{ block.settings.text }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="flex flex-col justify-center items-center md:flex-row md:justify-evenly gap-8 md:gap-4 mt-12">
      {% if section.settings.button_1_text != blank %}
        <a href="{{ section.settings.button_1_link }}" class="bg-yellow px-6 md:px-8 py-6 md:py-5 rounded-full text-base 
                md:text-baseLarge text-core font-bold md:font-semibold whitespace-nowrap w-fit transition-all duration-300 hover:text-yellow hover:bg-hover-gradient hover:bg-gradient-size hover:animate-gradient-wave">
          {{ section.settings.button_1_text }}
        </a>
      {% endif %}
      
      {% if section.settings.button_2_text != blank %}
        <a href="{{ section.settings.button_2_link }}" class="bg-yellow px-6 md:px-8 py-6 md:py-5 rounded-full text-base 
                md:text-baseLarge text-core font-bold md:font-semibold whitespace-nowrap w-fit transition-all duration-300 hover:text-yellow hover:bg-hover-gradient hover:bg-gradient-size hover:animate-gradient-wave">
          {{ section.settings.button_2_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

