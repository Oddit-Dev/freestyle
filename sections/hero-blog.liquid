{% schema %}
{
  "name": "Hero Blog",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Imagen Hero"
    },
    {
      "type": "text",
      "id": "date",
      "label": "Fecha",
      "default": "MAY 29, 2024"
    },
    {
      "type": "color",
      "id": "date_color",
      "label": "Color de fecha",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Discover The Coziest Baby Lovey Blanket For Your Little One's"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Color del título",
      "default": "#FFFFFF"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "Discover why selecting the right baby lovey blanket is crucial for comfort & security. Learn about the types, benefits & safety guidelines for your little one's."
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Color de descripción",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texto del botón",
      "default": "READ MORE"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link del botón"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Color del botón",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Hero Blog"
    }
  ]
}
{% endschema %}

<div class="bg-lila px-4 py-16 md:px-16">
  <div class="w-full mx-auto grid md:grid-cols-2 gap-8 ">
    <div class="h-full">
      {% if section.settings.hero_image %}
        <img 
          src="{{ section.settings.hero_image | img_url: 'master' }}"
          alt="{{ section.settings.heading }}"
          class="w-full h-[400px] md:h-[1200px] object-cover rounded-3xl"
        >
      {% else %}
        <div class="w-full h-96 bg-gray-200 rounded-3xl"></div>
      {% endif %}
    </div>
    
    <div class="space-y-4 md:space-y-96 px-8">
      {% if section.settings.date != blank %}
        <span class="text-base md:text-xl font-bold" style="color: {{ section.settings.date_color }}">
          {{ section.settings.date }}
        </span>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h1 class="text-xl md:text-5xl font-medium max-w-4xl" style="color: {{ section.settings.heading_color }}">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="text-base md:text-2xl font-medium" style="color: {{ section.settings.description_color }}">
          {{ section.settings.description }}
        </p>
      {% endif %}

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a 
          href="{{ section.settings.button_link }}"
          class="inline-block bg-yellow uppercase px-12 md:px-14 py-4 md:py-8 rounded-full text-base md:text-xl text-core font-bold md:font-semibold whitespace-nowrap w-fit transition-all duration-300 hover:text-yellow hover:bg-hover-gradient hover:bg-gradient-size hover:animate-gradient-wave"
          style="background-color: {{ section.settings.button_color }}"
        >
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</div>
