{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Emails as wavy as our diapers"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Descripción",
      "default": "Sign up to stay in the know on new artist collabs, new products, and special releases."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texto del botón",
      "default": "GET MY STICKER PACK"
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}

<div class="w-full bg-yellow py-20 md:py-40">
  <div class="max-w-5xl px-10 md:px4 mx-auto md:ml-20">
    {% if section.settings.title != blank %}
      <h2 class="text-2xl md:text-4xl text-core font-normal mb-20 md:mb-14 text-left md:text-left">{{ section.settings.title }}</h2>
    {% endif %}


    {% if section.settings.description != blank %}
      <p class="text-base md:text-lg md:text-2xl text-core mb-16 font-medium max-w-5xl text-left md:text-left">{{ section.settings.description }}</p>
    {% endif %}


    {%- form 'customer', class: 'space-y-4' -%}
      {% if form.errors %}
        <div class="text-red-500">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <input type="hidden" name="contact[tags]" value="newsletter">
      
      <div class="flex flex-col items-center md:items-start gap-4">
        <input
          type="email"
          name="contact[email]"
          class="w-[350px] md:w-[500px] px-8 py-4 md:py-8 rounded-full bg-core_light text-baseBig md:text-xl"
          placeholder="Your Email Address"
          required
        >

        <button
          type="submit"
          class="w-[350px] md:w-[500px] px-8  py-4 md:py-8 rounded-full bg-core text-yellow text-baseBig md:text-xl mt-1 font-semibold"
        >
          {{ section.settings.button_label }}
        </button>

        <label class="flex mt-4 md:mt-0 items-center gap-2 md:ml-[30%] mx-auto md:mx-0">
          <input type="checkbox" required class="rounded bg-core">
          <span class="text-sm text-core">I agree to the terms</span>
        </label>
      </div>
    {%- endform -%}
  </div>
</div>