<div class="px-4 md:px-12 py-12">
  <div class="flex flex-col md:flex-row justify-between items-center mb-12 px-8">
    <h1 class="text-2xl md:text-4xl md:max-w-[500px] font-medium order-1" style="color: {{ section.settings.heading_color }}">
      {{ section.settings.heading }}
    </h1>
    <ul class=" items-center space-x-6 order-3 hidden md:flex mt-8 md:mt-0">
      <li>
        {% if section.settings.logo_1 != blank %}
          <img src="{{ section.settings.logo_1 | img_url: '100x' }}" alt="Logo 1" class="h-24 w-24">
        {% endif %}
      </li>
      <li>
        {% if section.settings.logo_2 != blank %}
          <img src="{{ section.settings.logo_2 | img_url: '100x' }}" alt="Logo 2" class="h-24 w-24">
        {% endif %}
      </li>
      <li>
        {% if section.settings.logo_3 != blank %}
          <img src="{{ section.settings.logo_3 | img_url: '100x' }}" alt="Logo 3" class="h-24 w-24">
        {% endif %}
      </li>
    </ul>
  </div>

  <div class="grid md:grid-cols-2 gap-8 px-8 order-2 md:order-none">
    <div class="prose">
      <p class="text-baseLarge" style="color: {{ section.settings.paragraph_1_color }}">
        {{ section.settings.paragraph_1 | newline_to_br }}
      </p>
    </div>
    <div class="prose">
      <p class="text-baseLarge" style="color: {{ section.settings.paragraph_2_color }}">
        {{ section.settings.paragraph_2 | newline_to_br }}
      </p>
    </div>
  </div>
  <ul class="flex items-center px-8 space-x-6 order-3 md:hidden mt-8 md:mt-0">
    <li>
      {% if section.settings.logo_1 != blank %}
        <img src="{{ section.settings.logo_1 | img_url: '100x' }}" alt="Logo 1" class="h-30 w-30">
      {% endif %}
    </li>
    <li>
      {% if section.settings.logo_2 != blank %}
        <img src="{{ section.settings.logo_2 | img_url: '100x' }}" alt="Logo 2" class="h-30 w-30">
      {% endif %}
    </li>
    <li>
      {% if section.settings.logo_3 != blank %}
        <img src="{{ section.settings.logo_3 | img_url: '100x' }}" alt="Logo 3" class="h-30 w-30">
      {% endif %}
    </li>
  </ul>
</div>


{% schema %}
{
  "name": "Approach Bambootek",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "A Different Approach with BAMBOOTEKÂ®"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#4A5568"
    },
    {
      "type": "image_picker",
      "id": "logo_1",
      "label": "Logo 1"
    },
    {
      "type": "image_picker",
      "id": "logo_2",
      "label": "Logo 2"
    },
    {
      "type": "image_picker",
      "id": "logo_3",
      "label": "Logo 3"
    },
    {
      "type": "textarea",
      "id": "paragraph_1",
      "label": "First Paragraph",
      "default": "Over 1 billion trees are cut down per year to supply the global disposable diaper market. That's nearly 10% of all trees cut down annually."
    },
    {
      "type": "color",
      "id": "paragraph_1_color",
      "label": "First Paragraph Color",
      "default": "#4A5568"
    },
    {
      "type": "textarea",
      "id": "paragraph_2",
      "label": "Second Paragraph",
      "default": "Freestyle is the first brand doing something about this. We wanted to make a better diaper without using trees. Enter organic bamboo, the fastest-growing plant on earth (technically a grass)."
    },
    {
      "type": "color",
      "id": "paragraph_2_color",
      "label": "Second Paragraph Color",
      "default": "#4A5568"
    }
  ],
  "presets": [
    {
      "name": "Approach Bambootek"
    }
  ]
}
{% endschema %}