        <input
          type="email"
          class="flex-1 px-6 py-3 rounded-full border border-gray-200 focus:outline-none focus:border-gray-400"
          placeholder="Enter your email"
        >
        <button
          type="submit"
          class="mt-3 sm:mt-0 sm:-ml-36 px-6 py-3 rounded-full hover:bg-gray-100"
        >
          Submit
        </button>
      </form>
    </div>

    <!-- Columna derecha (70%) - Menús -->
