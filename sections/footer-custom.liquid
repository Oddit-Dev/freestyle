<div class="bg-[#F1F2F5] pt-8 lg:pt-0">
  <!-- Newsletter y Menús -->
  <div class=" flex flex-col lg:flex-row border-b-[1px] border-black">
    <!-- Columna izquierda (30%) - Newsletter -->
    <div class="lg:w-[40%] px-8 md:px-20 lg:px-20 xl:px-40 border-b-[1px] border-black lg:p-6 pb-12 lg:py-24 lg:flex lg:flex-col">
      <h2 class="text-xl md:text-4xl font-grotesk text-center lg:text-left font-normal mb-8 md:mb-12">
        Product launches,<br>
        community fun, VIP<br>
        drops, and more
      </h2>
      <form class="flex flex-row w-full lg:w-[320px] mt-8">
        <input
          type="email"
          class="flex-1 px-12 py-6 rounded-full border border-black "
          placeholder="Enter your email">
        <button
          type="submit"
          class="mt-0 -ml-36 px-6 py-3 rounded-full underline-none">
          Submit
        </button>
      </form>
    </div>

    <!-- Menus -->
