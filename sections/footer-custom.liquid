<div class="bg-[#F1F2F5]">
  <!-- Newsletter y Menús -->
  <div class=" flex flex-col lg:flex-row border-b-[1px] border-black">
    <!-- Columna izquierda (30%) - Newsletter -->
    <div class="lg:w-[40%] px-4 lg:px-16 border-b-[1px] border-black p-6 lg:py-52 lg:flex lg:flex-col lg:pl-[100px]">
      <h2 class="text-xl md:text-4xl font-normal mb-8">
        Product launches,<br>
        community fun, VIP<br>
        drops, and more
      </h2>
      <form class="flex flex-col sm:flex-row w-[320px] mt-8">
        <input
          type="email"
          class="flex-1 px-12 py-4 rounded-full border border-black "
          placeholder="Enter your email"
        >
        <button
          type="submit"
          class="mt-3 sm:mt-0 sm:-ml-36 px-6 py-3 rounded-full hover:bg-gray-100"
        >
          Submit
        </button>
      </form>
    </div>

    <!-- Menus -->
    <div class="lg:w-[60%] mt-12 lg:mt-0 px-4 border-b-[1px] border-l-2 border-black rounded-bl-3xl p-6 lg:pt-24 lg:pb-64 lg:px-28 lg:-ml-10">
      <div class="grid grid-cols-2 px-8 md:px-0 md:grid-cols-5 gap-20">
        <!-- Shop -->
        <div>
          <h3 class="font-semibold mb-20">Shop</h3>
          <ul class="space-y-8">
            <li><a href="#" class="text-gray-600 hover:text-black">Skin❤️Shield ™</a></li>
            <li><a href="#" class="text-gray-600 hover:text-black">Bamboo    Tek™ Diaper</a></li>
            <li><a href="#" class="text-gray-600 hover:text-black">Jumbo Wipes</a></li>
            <li><a href="#" class="text-gray-600 hover:text-black">Accessories</a></li>
          </ul>
        </div>

        <!-- Retail -->
        <div>
          <h3 class="font-semibold mb-20">Retail</h3>
          <ul class="space-y-8">
            <li><a href="#" class="text-gray-600 hover:text-black">Walmart</a></li>
            <li><a href="#" class="text-gray-600 hover:text-black">Amazon</a></li>
            <li><a href="#" class="text-gray-600 hover:text-black">Locate others</a></li>
          </ul>
        </div>

        <!-- About -->
        <div>
          <h3 class="font-semibold mb-20">About</h3>
          <ul class="space-y-8">
            <li><a href="#" class="text-gray-600 hover:text-black">Safety & Lab Tests</a></li>
            <li><a href="#" class="text-gray-600 hover:text-black">About Us</a></li>
          </ul>
        </div>

        <!-- Help -->
        <div>
          <h3 class="font-semibold mb-20">Help</h3>
          <ul class="space-y-8">
            <li><a href="#" class="text-gray-600 hover:text-black">Contact</a></li>
            <li><a href="#" class="text-gray-600 hover:text-black">FAQs</a></li>
          </ul>
        </div>

        <!-- Social -->
        <div>
          <h3 class="font-semibold mb-20">Social</h3>
          <ul class="space-y-8">
            <li><a href="#" class="text-gray-600 hover:text-black font-extralight">Instagram</a></li>
            <li><a href="#" class="text-gray-600 hover:text-black font-extralight">TikTok</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Tagline -->
  <div class="border-t border-gray-100 py-16">
    <div class="container mx-auto py-16 text-center">
      <h3 class="text-4xl font-semibold font-sans text-purple-700">Parenting is the<span class="font-roman"> Ultimate Creative Act.</span></h3>
    </div>
  </div>

  <!-- Footer bottom -->
  <div class="border-t border-gray-100">
    <div class="container mx-auto py-6 px-4 flex flex-col md:flex-row justify-between items-center text-sm text-gray-600">
      <p>© 2025 Freestyle Works Inc.</p>
      <div class="flex gap-6 mt-4 md:mt-0">
        <a href="#" class="hover:text-black">Privacy Policy</a>
        <a href="#" class="hover:text-black">Terms of Service</a>
        <a href="#" class="hover:text-black">Consumer Health Policy</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Footer custom",
  "settings": [
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter Title",
      "default": "Product launches, community fun, VIP drops, and more"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Parenting is the Ultimate Creative Act."
    }
  ],
  "presets": [
    {
      "name": "Footer custom"
    }
  ]
}
{% endschema %}
