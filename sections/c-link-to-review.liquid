<!-- /sections/c-link-to-review.liquid -->
<section class="c-link-to-review py-12 md:py-24">
  <div class="container">
    <div class="section-content">
      <div class="text-center">
        <h2 class="text-3xl md:text-4xl pt-12">{{ section.settings.heading }}</h2>
        <div class="image-content text-center py-12">
          <img src="{{ section.settings.image | img_url: 'medium' }}" alt="{{ section.settings.image_alt }}" class="m-auto">
        </div>
        <p>{{ section.settings.text }}</p>
      </div>
      <div class="flex justify-center pb-12 pt-4">
        <a href="{{ section.settings.button_link }}" target="_blank" class="btn btn-primary m-auto">
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .c-link-to-review .btn.btn-primary {
    width: 222px;
  }
</style>

{% schema %}
  {
    "name": "Link to Review",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "See what parents are saying"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "We value your feedback! Share your thoughts about our products."
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "image_alt",
        "label": "Image Alt Text",
        "default": "Review Image"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Read reviews"
      }
    ],
    "presets": [
      {
        "name": "Link to Review"
      }
    ]
  }
  {% endschema %}
