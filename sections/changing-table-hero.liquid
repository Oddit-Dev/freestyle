<div class="flex flex-col md:flex-row w-full min-h-[500px]">
  {%- if section.settings.hero_image != blank -%}
    <div class="w-full md:w-1/2 h-full px-8 py-6  md:p-28 order-last md:order-first">
      {{ section.settings.hero_image | image_url: width: 1000 | image_tag: 
        class: "w-full h-full object-cover border-4 border-core rounded-3xl",
        loading: "lazy",
        alt: section.settings.hero_image.alt | escape
      }}
    </div>
  {%- endif -%}

  <div class="w-full md:w-1/2 p-8 md:p-12 flex flex-col md:pt-28 space-y-12 md:space-y-30 order-first md:order-last">
    {%- if section.settings.heading != blank -%}
      <h1 class="text-2xl md:text-5xl font-medium text-core">
        {{ section.settings.heading }}
      </h1>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <p class="text-base md:text-xl font-medium text-core">
        {{ section.settings.description }}
      </p>
    {%- endif -%}

    {%- if section.settings.button_label != blank -%}
      <div class="flex justify-center pt-6">
        <a href="{{ section.settings.button_url }}" 
           class="bg-yellow uppercase px-6 md:px-14 py-6 md:py-8 rounded-full text-base md:text-xl text-core font-bold
            md:font-semibold whitespace-nowrap w-fit transition-all duration-300 hover:text-yellow hover:bg-hover-gradient 
            hover:bg-gradient-size hover:animate-gradient-wave">
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Hero Changing Table",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Changing Table: tales of real parenthood."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Crafting top-tier baby gear is just the start. Every week, we dive headfirst into the wild world of parenting with a fresh series, rallying experts to tackle burning questions about pregnancy, parent life, and the art of raising tiny humans. Think of it as unfiltered advice from the forefront of modern parenting."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "WATCH ON YOUTUBE"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Changing Table"
    }
  ]
}
{% endschema %}
