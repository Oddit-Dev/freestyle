{% render 'entry' with '@/scripts/sections/c-hero-video.js' %}

<div class="custom-hero-video relative w-full overflow-hidden" data-hero-video>
  <div class="custom-hero-video__container relative w-full h-screen">
    {% if section.settings.image != blank %}
      <img 
        src="{{ section.settings.image | image_url }}"
        alt="{{ section.settings.heading }}"
        class="absolute inset-0 w-full h-full object-cover"
      >
    {% endif %}
    
    <div class="custom-hero-video__content absolute inset-0 flex flex-col justify-center items-center px-4 md:px-16 bg-gradient-to-r from-black/40 via-black/40 to-black/40 z-10">
      {% if section.settings.heading != blank %}
        <h2 class="text-4xl md:text-6xl font-extralight mb-4 md:mb-12 text-center mx-auto"
            style="color: {{ section.settings.heading_color }};">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="text-2xl md:text-4xl text-center mx-auto max-w-2xl mb-8 md:mb-12"
           style="color: {{ section.settings.description_color }};">
          {{ section.settings.description }}
        </p>
      {% endif %}
      
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link | default: '#' }}" 
           class="mx-auto px-10 py-5 md:px-24 md:py-6 rounded-full md:text-xl md:mt-4 font-light bg-blueelectric text-white hover:opacity-90 transition-colors" style="background-color: #0066FF;">
           
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Hero Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Tu título principal aquí"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#FFFFFF"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Agrega aquí tu descripción"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Hero Image"
    }
  ]
}
{% endschema %}
