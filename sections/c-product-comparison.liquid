{% schema %}
{
  "name": "Product comparison",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "TÃ­tulo",
      "default": "You made a baby,\n we made a diaper."
    },
    {
      "type": "color",
      "id": "table_bg_color",
      "label": "Table left background color",
      "default": "#E6E6FA"
    },
    {
      "type": "color",
      "id": "highlight_bg_color",
      "label": "Highlight background color",
      "default": "#919CC2"
    },
    {
      "type": "image_picker",
      "id": "comparison_image",
      "label": "Comparison image"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "SHOP FREESTYLE DIAPERS"
    }
  ],
  "blocks": [
    {
      "type": "comparison_row",
      "name": "Comparison row",
      "settings": [
        {
          "type": "text",
          "id": "feature",
          "label": "Feature",
          "default": "CLEAN INGREDIENTS"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product comparison",
      "blocks": [
        {
          "type": "comparison_row"
        },
        {
          "type": "comparison_row"
        },
        {
          "type": "comparison_row"
        },
        {
          "type": "comparison_row"
        },
        {
          "type": "comparison_row"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="md:px-30 mx-auto py-12">
  <h2 class="text-2xl md:text-5xl text-center mb-12 text-core space-y-2">
    {% assign title_parts = section.settings.title | split: ',' %}
    <span class="block">{{ title_parts[0] }},</span>
    <span class="block">{{ title_parts[1] }}</span>
  </h2>

  <div class="flex flex-col md:flex-row gap-8 items-center justify-center">
    <div class="w-full md:w-1/2">
      <div class="rounded-3xl overflow-hidden">
        <div class="px-8">
          <table class="w-full text-lg h-[500px] relative">
            <thead>
              <tr>
                <th class="p-6 text-left md:w-2/5 bg-core_light rounded-tl-3xl"></th>
                <th class="p-6 text-center w-1/5 font-bold text-xl h-[100px] relative -mx-8 z-10" style="background-color: {{ section.settings.highlight_bg_color }}">
                  <img 
                    src="https://cdn.shopify.com/s/files/1/0616/2835/0723/files/logo2.png?v=1649838246"
                    alt="Freestyle"
                    class="h-8 md:h-12 mx-0 md:mx-auto"
                  >
                </th>
                <th class="p-6 px-12 text-center w-2/5 text-gray-600 text-sm bg-core_light rounded-tr-3xl font-semibold text-core">
                  REGULAR <br> DIAPERS
                </th>
              </tr>

            </thead>

            <tbody>
              {% for block in section.blocks %}
                <tr style="background-color: {{ section.settings.table_bg_color }}">
                  <td class="p-6 md:px-14 border-t font-bold text-core{% if forloop.last %} rounded-bl-3xl{% endif %} text-end">
                    {{ block.settings.feature }}
                  </td>
                  <td class="p-6 md:px-8 border-t text-center relative -mx-8 z-10" style="background-color: {{ section.settings.highlight_bg_color }}">
                    <div class="bg-core_light w-12 h-12 rounded-full flex items-center justify-center mx-auto">
                      <svg class="w-14 h-14" fill="none" viewBox="0 0 24 24">
                        <path 

                          d="M5 13l4 4L19 7" 
                          stroke="#22C55E" 
                          stroke-width="2.5" 
                          stroke-linecap="round" 
                          stroke-linejoin="round"
                        />
                      </svg>
                    </div>
                  </td>
                  <td class="p-6 md:px-8 border-t text-center font-bold text-core {% if forloop.last %}rounded-br-3xl{% endif %}">
                    <svg class="w-12 h-12 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="w-full md:w-1/2 hidden md:block">
      {% if section.settings.comparison_image != blank %}
        <img 
          src="{{ section.settings.comparison_image | img_url: 'master' }}"
          alt="Comparison image"
          class="w-full h-[500px] rounded-lg shadow-lg"
        >
      {% endif %}
    </div>
  </div>

  <div class="text-center mt-14">
    <a 
      href="{{ section.settings.button_link | default: '#' }}"
      class="inline-block text-core bg-green px-10 md:px-12 py-6 md:py-8 rounded-full text-base 
                md:text-baseLarge  font-bold md:font-semibold whitespace-nowrap w-fit transition-all duration-300 hover:text-yellow hover:bg-hover-gradient hover:bg-gradient-size hover:animate-gradient-wave"
    >
      {{ section.settings.button_text | default: 'SHOP FREESTYLE DIAPERS' }}
    </a>
  </div>
</div>