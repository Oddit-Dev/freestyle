<div class=" mx-auto px-12 py-16">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-16 mb-8">
    {% for block in section.blocks %}
      <div class="flex flex-col items-center" {{ block.shopify_attributes }}>
        <div class="w-full">
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | img_url: 'master' }}"
              alt="{{ block.settings.image.alt }}"
              loading="lazy"
              class="w-full h-auto rounded-3xl"
            >
          {% endif %}
          
          <div class="mt-6">
            <h3 class="text-base md:text-xl font-medium text-core mb-2">{{ block.settings.title }}</h3>
            <p class="text-core text-base md:text-xl font-bold mb-8 md:mb-20">{{ block.settings.subtitle }}</p>
            
            {% if block.settings.button_label != blank %}
              <div class="flex justify-center">
                <a 
                  href="{{ block.settings.button_link }}" 
                  class="bg-yellow uppercase px-8 md:px-14 py-6 md:py-8 rounded-full text-base md:text-xl text-core font-bold
              md:font-semibold whitespace-nowrap w-fit transition-all duration-300 hover:text-yellow hover:bg-hover-gradient 
              hover:bg-gradient-size hover:animate-gradient-wave"
                >
                  {{ block.settings.button_label }}
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Grid Blogs Video",
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Subtitle"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "WATCH ON YOUTUBE"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grid Blogs Video",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}
