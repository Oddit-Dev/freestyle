{% if section.blocks.size > 0 %}
  {% capture main_compare_text %}{% endcapture %}
  {% capture other_compare_text %}{% endcapture %}

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'text' %}
        {% if block.settings.text != blank %}
          {% capture main_compare_text %}
            {{ main_compare_text }}
            <p class="block-text">
              {{ 'icon-emoji.svg' | inline_asset_content }}
              <span class="text">{{ block.settings.text }}</span>
            </p>
          {% endcapture %}
        {% endif %}
      {% when 'compare_text' %}
        {% if block.settings.text != blank %}
          {% capture other_compare_text %}
            {{ other_compare_text }}
            <p class="block-text">
              {{ 'icon-compare-emoji.svg' | inline_asset_content }}
              <span class="text">{{ block.settings.text }}</span>
            </p>
          {% endcapture %}
        {% endif %}
    {% endcase %}
  {% endfor %}


  <div class="comparison-main">
    <div class="container">
      {% if section.settings.main_heading != blank %}
        <div class="header-wrapper">
          <h2 class="heading">{{ section.settings.main_heading }}</h2>
        </div>
      {% endif %}
      <div class="flex-multiple-compare">
        {% if main_compare_text != blank or section.settings.image != blank %}
          <div class="left-compare">
            <div class="image-wrapper">
              {%- render 'image-element',
                image: section.settings.image,
                widths: '240, 270, 300, 330, 360, 290',
                sizes: '(max-width: 749px) 100vw, 50vw',
                class: 'w-full h-full max-md:hidden h-auto'
              -%}
            </div>
            <div class="content-wrapper">
              {% if section.settings.heading != blank %}
                <h2 class="heading">{{ section.settings.heading }}</h2>
              {% endif %}
              <div class="multiple-text-content">
                {{ main_compare_text }}
              </div>
            </div>
          </div>
        {% endif %}
        {% if other_compare_text != blank or section.settings.compare_image != blank %}
          <div class="vs-compare">
            <p class="vs-text">VS</p>
          </div>
          <div class="right-compare">
            <div class="image-wrapper">
              {%- render 'image-element',
                image: section.settings.compare_image,
                widths: '240, 270, 300, 330, 360, 290',
                sizes: '(max-width: 749px) 100vw, 50vw',
                class: 'w-full h-full max-md:hidden h-auto'
              -%}
            </div>
            <div class="content-wrapper">
              {% if section.settings.compare_heading != blank %}
                <h2 class="heading">{{ section.settings.compare_heading }}</h2>
              {% endif %}
              <div class="multiple-text-content">
                {{ other_compare_text }}
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Comparison",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "Other Comparasion"
    },
    {
      "type": "image_picker",
      "id": "compare_image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "compare_heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "compare_text",
      "name": "Compare Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparison"
    }
  ]
}
{% endschema %}
