{% if section.blocks.size > 0 %}
  {% if section.settings.background_image != blank %}
    {% style %}
      .icon-with-text--{{ section.id }} {
        background-image: url({{ section.settings.background_image |  image_url: width: 1920 }});
      }
    {% endstyle %}
  {% endif %}
  <div class="icon-with-text icon-with-text--{{ section.id }}">
    <div class="container">
      {% if section.settings.heading != blank or section.settings.text != blank %}
        <div class="header-wrapper">
          {% if section.settings.heading != blank %}
            <h2 class="heading">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.text != blank %}
            <p class="text">{{ section.settings.text }}</p>
          {% endif %}
        </div>
      {% endif %}
      <div class="multiple-icon-with-text">
        {% for block in section.blocks %}
          <div class="icon-text-details">
            {% if block.settings.image != blank %}
              <div class="icon-wrapper">
                {%- render 'image-element',
                  image: block.settings.image,
                  widths: '80, 90, 100, 110, 120, 130',
                  sizes: '(max-width: 749px) 100vw, 100vw',
                  class: 'w-full h-full h-auto'
                -%}
              </div>
            {% endif %}
            {% if block.settings.heading != blank or block.settings.text != blank %}
              <div class="details-wrapper">
                {% if block.settings.heading != blank %}
                  <h2 class="heading">{{ block.settings.heading }}</h2>
                {% endif %}
                {% if block.settings.text != blank %}
                  <p class="text">{{ block.settings.text }}</p>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Icon With Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "text",
      "label": "Text"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon With Text"
    }
  ]
}
{% endschema %}