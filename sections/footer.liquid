        <div class="flex justify-center  lg:flex-row gap-8 lg:justify-center md:mt-12 md:flex-row">
          <div class="space-y-1 md:space-y-4">
            {% for link in section.settings.footer_menu_1.links %}
              <div>

                <a href="{{ link.url }}" class=" text-sm font-semibold md:text-base text-core">{{ link.title }}</a>
              </div>
            {% endfor %}
          </div>
          <div class="space-y-1 md:space-y-4">
            {% for link in section.settings.footer_menu_2.links %}
              <div>
                <a href="{{ link.url }}" class="text-sm font-semibold md:text-base text-core">{{ link.title }}</a>
              </div>
            {% endfor %}
          </div>
          <div class="space-y-1 md:space-y-4">
            {% for link in section.settings.footer_menu_3.links %}
              <div>
                <a href="{{ link.url }}" class="text-sm font-semibold md:text-base text-core">{{ link.title }}</a>
              </div>
            {% endfor %}
          </div>
        </div>

        <div class="flex flex-col mt-6  lg:flex-row gap-8 lg:justify-center  md:mt-12">
          <p class=" text-xs md:text-sm  text-core font-semibold">{{ section.settings.copyright_text }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Logo"
    },
    {
      "type": "header",
      "content": "Navigation Menus"
    },
    {
      "type": "link_list",
      "id": "footer_menu_1",
      "label": "Menu 1"
    },

    {
      "type": "link_list",
      "id": "footer_menu_2",
      "label": "Menu 2"

    },
    {
      "type": "link_list",
      "id": "footer_menu_3",
      "label": "Menu 3"

    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "All rights reserved Â© Freestyle World Inc. 2024"

    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}