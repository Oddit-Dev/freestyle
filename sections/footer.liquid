      "id": "social_instagram_icon",
      "label": "Instagram Icon"
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "image_picker",
      "id": "social_tiktok_icon",
      "label": "TikTok Icon"
    },
    {
      "type": "url",
      "id": "social_tiktok",
      "label": "TikTok URL"
    },
    {
      "type": "image_picker",
      "id": "social_facebook_icon",
      "label": "Facebook Icon"
    },
    {
      "type": "url",
      "id": "social_facebook",
      "label": "Facebook URL"
    },
    {
      "type": "image_picker",
      "id": "social_twitter_icon",
      "label": "Twitter Icon"
    },
    {
      "type": "url",
      "id": "social_twitter",
      "label": "Twitter URL"
    },
    {
      "type": "image_picker",
      "id": "social_youtube_icon",
      "label": "YouTube Icon"
    },
    {
      "type": "url",
      "id": "social_youtube",
      "label": "YouTube URL"
    },
    {
      "type": "header",
