<div class="py-8 md:py-16 bg-yellow overflow-hidden relative">
  <h2 class="text-2xl font-normal md:font-normal md:text-5xl mb-4  mx-8  md:absolute md:top-16 
    md:left-8 z-10 md:max-w-[50%] text-[#AD887D] md:mb-20">
    {{ section.settings.title -}}
    <br>
    <span class="text-2xl font-medium md:text-4xl text-gray-600 block mt-2">{{ section.settings.subtitle }}</span>
  </h2>



  <div class="mt-8 md:mt-48 overflow-hidden w-full relative">
    <div class="flex gap-8 md:gap-6 overflow-x-auto whitespace-nowrap scroll-container touch-pan-x snap-x snap-mandatory">
      {%- for block in section.blocks -%}
        <div class="min-w-[300px] md:min-w-[300px] flex flex-col gap-4 p-4 snap-start" {{ block.shopify_attributes }}>
          <div class="w-[300px] h-[400px] flex-shrink-0">
            <img
              src="{{ block.settings.review_image | default: 'https://cdn.sanity.io/images/cn55vbgx/production/f25a631dd844f1eda10ae233bc275c4cd96c2a3b-1151x2034.jpg?w=1000&h=1767&q=80&fit=max&auto=format' }}"
              alt="{{ block.settings.author_name }}'s review"
              loading="lazy"
              class="w-full h-full object-cover rounded-lg">
          </div>
          <div class="flex flex-col">
            <div class="font-bold text-[#AD887D] text-sm md:text-base whitespace-normal">
              {%- if block.settings.author_url -%}
                <a href="{{ block.settings.author_url }}" target="_blank" rel="noopener noreferrer" class="hover:underline">
              {%- endif -%}
                {{ block.settings.author_name | default: 'John Doe | @JohnDoe' }}
              {%- if block.settings.author_url -%}
                </a>
              {%- endif -%}
              <svg class="inline-block w-6 h-6 ml-1" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="12" fill="#1DA1F2"/>
                <path d="M17.5 8.5l-6.5 6.5L7.5 11.5" stroke="white" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              {%- if block.settings.author_handle -%}
                <span class="text-gray-400 ml-2">{{ block.settings.author_handle }}</span>
              {%- endif -%}
            </div>
            <div class="text-base md:text-xl leading-relaxed mb-4 text-[#AD887D] whitespace-normal">
              {{ block.settings.review_text | default: 'Not only does baby Miro look cool as hell, nothing escapes this well-designed, natural, v absorbent diaper.' }}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .overflow-x-auto {
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; 
    -ms-overflow-style: none; 
  }

  .overflow-x-auto::-webkit-scrollbar {
    display: none; 
  }
</style>

{% schema %}
{
  "name": "Review Scroller",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Real reviews from"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "real families."
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "John Doe | @JohnDoe"
        },
        {
          "type": "url",
          "id": "author_url",
          "label": "Author Profile URL"
        },
        {
          "type": "checkbox",
          "id": "is_verified",
          "label": "Show Verified Badge",
          "default": false
        },
        {
          "type": "text",
          "id": "author_handle",
          "label": "Social Media Handle"
        },
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review Text",
          "default": "Not only does baby Miro look cool as hell, nothing escapes this well-designed, natural, v absorbent diaper."
        },
        {
          "type": "image_picker",
          "id": "review_image",
          "label": "Review Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Review Scroller",
      "blocks": [
        {
          "type": "review"
        }
      ]
    }
  ]
}
{% endschema %}
