{% if section.blocks.size > 0 %}
  <div class="testimonial testimonial--{{ section.id }}">
    <div class="full-container">
      {% if section.settings.heading != blank %}
        <div class="header-wrapper">
          <h2 class="heading">{{ section.settings.heading }}</h2>
        </div>
      {% endif %}
      <div class="multiple-testimonial testimonial-slider">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {% if block.settings.image != blank or block.settings.rating_image != blank or block.settings.text != blank or block.settings.title != blank %}
              <div class="testimonial-block swiper-slide">
                <div class="image-with-text-content">
                  {% if block.settings.rating_image != blank or block.settings.text != blank or block.settings.title != blank %}
                    <div class="content-wrapper">
                      {% if block.settings.rating_image != blank %}
                        <div class="rating-image">
                          {%- render 'image-element',
                            image: block.settings.rating_image,
                            widths: '50, 60, 70, 80, 90',
                            sizes: '(max-width: 749px) 100vw, 100vw',
                            class: 'w-full h-full max-md:hidden h-auto'
                          -%}
                        </div>
                      {% endif %}
                      {% if block.settings.text != blank %}
                        <div class="text">
                          {{ block.settings.text }}
                        </div>
                      {% endif %}
                      {% if block.settings.title != blank %}
                        <h2 class="title">{{ block.settings.title }}</h2>
                      {% endif %}
                      {% if block.settings.verified_buyer %}
                        <p class="verify-content">
                          {{ 'icon-verified-buyer.svg' | inline_asset_content }}
                          <span class="text">Verified buyer</span>
                        </p>
                      {% endif %}
                    </div>
                  {% endif %}
                  {% if block.settings.image != blank %}
                    <div class="image-wrapper">
                      {%- render 'image-element',
                        image: block.settings.image,
                        widths: '250, 280, 310, 340, 370',
                        sizes: '(max-width: 749px) 100vw, 50vw',
                        class: 'full h-full max-md:hidden h-auto'
                      -%}
                    </div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
      </div>
      {% if section.settings.button != blank and section.settings.link != blank %}
        {% assign heart_svg = 'icon-heart.svg' | inline_asset_content %}
        {% assign main_button = section.settings.button | replace: '$heart', heart_svg %}
        <div class="button-wrapper">
          <a class="button" href="{{ section.settings.link }}">{{ main_button }}</a>
        </div>
      {% endif %}
    </div>
  </div>


  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const swiper = new Swiper('.testimonial--{{ section.id }} .testimonial-slider', {
        spaceBetween: 10,
        centeredSlides: false,
        slidesPerView: 1.1,
        loop: true,
        pagination: {
          el: '.testimonial--{{ section.id }} .swiper-pagination',
        },
        breakpoints: {
          320: {
            freemode:true,
            slidesPerView: 1.1,
          },
          768: {
            freemode:true,
            slidesPerView: 2.1,
          }
        },
      });
    });
  </script>

{% endif %}

{% schema %}
{
  "name": "Testimonial",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker", 
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "rating_image",
          "label": "Rating Image"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "checkbox",
          "id": "verified_buyer",
          "label": "Verified buyer",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial"
    }
  ]
}
{% endschema %}
