{% render 'entry' with '@/scripts/sections/logo-reviews.js' %}


<div class="mx-auto px-4 py-8 md:py-40 bg-lila/20">
  <div style="display: none">
    {% for block in section.blocks %}
      <div>Review {{forloop.index}}: {{ block.settings.review }}</div>
    {% endfor %}
  </div>

  <div class="text-center md:mb-40">
    <p id="reviewText" class="text-core text-lg font-semibold md:text-2xl max-w-7xl mx-auto">
      "Of all the new diapers that have come to market, these are our favorites. Super stylish, they are also more sustainable than many other disposable diaper brands thanks to the bamboo core."
    </p>
  </div>
  
  <div class="flex flex-nowrap overflow-x-scroll scrollbar-hide whitespace-nowrap gap-4 items-center mt-8 md:grid md:grid-cols-5 md:overflow-x-hidden">
    {% for block in section.blocks %}
      {% assign review_index = forloop.index %}
      {% assign review_text = "" %}
      
      {% case review_index %}
        {% when 1 %}
          {% assign review_text = "Of all the new diapers that have come to market, these are our favorites. Super stylish, they are also more sustainable than many other disposable diaper brands thanks to the bamboo core." %}
        {% when 2 %}
          {% assign review_text = "The softness and absorption are unmatched. Our babies sleep through the night without discomfort. An excellent choice for environmentally conscious parents." %}
        {% when 3 %}
          {% assign review_text = "Premium quality is noticeable in every detail. The materials are safe for sensitive skin and the design is modern and functional." %}
        {% when 4 %}
          {% assign review_text = "A brand that delivers on all its promises. The diapers are incredibly absorbent and environmentally friendly." %}
        {% when 5 %}
          {% assign review_text = "The best investment for your baby's care. Eco-friendly, soft, and with exceptional performance that justifies every penny." %}
      {% endcase %}

      <div class="w-[40%] flex-none md:w-auto flex justify-center items-center {% if forloop.last %}md:col-span-1{% endif %} cursor-pointer logo-item" 
           {{ block.shopify_attributes }}
           data-review="{{ review_text }}"
      >
        {% if block.settings.logo != blank %}
          <img 
            src="{{ block.settings.logo | image_url: width: 1000 }}"
            alt="{{ block.settings.logo.alt | escape }}"
            loading="lazy"
            class="w-auto h-40 md:h-56 object-contain"
            width=""
            height=""
          >
        {% else %}

          {% assign default_logos = "https://cdn.sanity.io/images/cn55vbgx/production/003b0d4f1eda5a2461c39e03a1c4809912bca280-500x500.svg?w=1000&h=1000&q=80&fit=max&auto=format,https://cdn.sanity.io/images/cn55vbgx/production/7d782f9c41b90b51446cfbe1c19f33d6adf74af7-500x500.svg?w=1000&h=1000&q=80&fit=max&auto=format,https://cdn.sanity.io/images/cn55vbgx/production/2b8f11ebbe61bc89ba04e244adede4beb473c420-500x500.svg?w=1000&h=1000&q=80&fit=max&auto=format,https://cdn.sanity.io/images/cn55vbgx/production/5d41ac81c9b67331bb600ac77c773b16f40f4350-2083x2083.png?w=1000&h=1000&q=80&fit=max&auto=format,https://cdn.sanity.io/images/cn55vbgx/production/b98f7bb1931acf41eaf6c447a970d84cebc38135-2083x2083.png?w=1000&h=1000&q=80&fit=max&auto=format" | split: "," %}
          <img 
            src="{{ default_logos[forloop.index0] }}"
            alt="Logo {{ forloop.index }}"
            loading="lazy"
            class="w-auto h-40 md:h-56 object-contain"
            width=""
            height=""
          >
        {% endif %}

      </div>
    {% endfor %}
  </div>
</div>



