<div class="mx-auto px-4 py-8 md:py-20 bg-blue-100">
  <div class="grid md:grid-cols-2 gap-8 items-center max-w-6xl mx-auto">
    <!-- Lado izquierdo - Estrellas y número de reseñas -->
    <div class="flex flex-col items-center md:items-center justify-start text-start">
      <div class="flex gap-1 items-start">
        {% for i in (1..5) %}
          <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" 
                  stroke="#8B5CF6" 
                  stroke-width="2" 
                  stroke-linecap="round" 
                  stroke-linejoin="round"
                  fill="none"/>
          </svg>
        {% endfor %}
      </div>
      <span class="mt-4 text-gray-700 font-medium text-base">50,000+ Verified 5-Star reviews</span>
    </div>

    <!-- Lado derecho - Carrusel de testimonios -->
    <div class="relative min-h-[120px] flex items-center justify-start text-start" id="testimonials-container">
      {% for block in section.blocks %}
        <div class="absolute w-full justify-start transition-opacity duration-300 {% if forloop.first %}opacity-100{% else %}opacity-0{% endif %}" 
             data-testimonial 
             {{ block.shopify_attributes }}>
          <h3 class="text-3xl md:text-xl font-normal mb-4 text-blue-800">{{ block.settings.testimonial_text }}</h3>
          <p class="font-extralight text-xl">- {{ block.settings.author_name }}, {{ block.settings.location }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const testimonials = document.querySelectorAll('[data-testimonial]');
    let currentIndex = 0;

    function showNextTestimonial() {
      // Ocultar el testimonio actual
      testimonials[currentIndex].classList.remove('opacity-100');
      testimonials[currentIndex].classList.add('opacity-0');

      // Actualizar el índice
      currentIndex = (currentIndex + 1) % testimonials.length;

      // Mostrar el siguiente testimonio
      testimonials[currentIndex].classList.remove('opacity-0');
      testimonials[currentIndex].classList.add('opacity-100');
    }

    // Iniciar el carrusel si hay testimonios
    if (testimonials.length > 0) {
      setInterval(showNextTestimonial, 5000);
    }
  });
</script>

{% schema %}
{
  "name": "Testimonials Section",
  "max_blocks": 10,
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "testimonial_text",
          "label": "Testimonial Text",
          "default": "The Skin❤️Shield diapers made parenting so much easier!"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "Sofie Flores"
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location",
          "default": "Los Angeles"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials Section",
      "blocks": [
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
