{% doc %}
  @prompt
    Custom HTML when I can embed an email signup form with SMS from Klaviyo with the embedded code 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-klaviyo-embed-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-klaviyo-embed__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-klaviyo-embed__content-{{ ai_gen_id }} {
    width: 100%;
  }

  .ai-klaviyo-embed__placeholder-{{ ai_gen_id }} {
    padding: 40px 20px;
    text-align: center;
    background-color: #f4f4f4;
    border: 2px dashed #cccccc;
    border-radius: 8px;
    color: #666666;
  }

  .ai-klaviyo-embed__placeholder-title-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 12px;
    color: #333333;
  }

  .ai-klaviyo-embed__placeholder-text-{{ ai_gen_id }} {
    font-size: 14px;
    line-height: 1.5;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-klaviyo-embed-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }
  }
{% endstyle %}

<klaviyo-embed-{{ ai_gen_id }}
  class="ai-klaviyo-embed-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-klaviyo-embed__container-{{ ai_gen_id }}">
    <div class="ai-klaviyo-embed__content-{{ ai_gen_id }}">
      {% if block.settings.klaviyo_embed_code != blank %}
        {{ block.settings.klaviyo_embed_code }}
      {% else %}
        <div class="ai-klaviyo-embed__placeholder-{{ ai_gen_id }}">
          <h3 class="ai-klaviyo-embed__placeholder-title-{{ ai_gen_id }}">Klaviyo Form Embed</h3>
          <p class="ai-klaviyo-embed__placeholder-text-{{ ai_gen_id }}">
            Paste your Klaviyo email/SMS signup form embed code in the "Klaviyo embed code" setting below.<br>
            To get your embed code, go to Klaviyo → Sign-up Forms → Select your form → Get Embed Code.
          </p>
        </div>
      {% endif %}
    </div>
  </div>
</klaviyo-embed-{{ ai_gen_id }}>

<script>
  (function() {
    class KlaviyoEmbed{{ai_gen_id}} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.initializeKlaviyoScripts();
      }

      initializeKlaviyoScripts() {
        const scripts = this.querySelectorAll('script');
        scripts.forEach((oldScript) => {
          if (oldScript.src || oldScript.textContent.trim()) {
            const newScript = document.createElement('script');
            
            if (oldScript.src) {
              newScript.src = oldScript.src;
            }
            
            if (oldScript.textContent) {
              newScript.textContent = oldScript.textContent;
            }
            
            Array.from(oldScript.attributes).forEach((attr) => {
              if (attr.name !== 'src') {
                newScript.setAttribute(attr.name, attr.value);
              }
            });
            
            oldScript.parentNode.replaceChild(newScript, oldScript);
          }
        });
      }
    }

    customElements.define('klaviyo-embed-{{ ai_gen_id }}', KlaviyoEmbed{{ai_gen_id}});
  })();
</script>

