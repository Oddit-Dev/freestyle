{% assign settingsHeaderBg = settings.header_bg %}
{% render 'entry' with '@/scripts/sections/header.js' %}
{% render 'entry' with '@/styles/sections/header.scss' %}

{% if settings.show_promo %}
  <div class="b-header__promo  text-[10px] lg:text-base relative w-full py-6 px-12 text-center font-Aksen tracking-wid bg-core text-white-content text-sm uppercase tracking-[0.1rem]">
    {% if settings.show_promo_link != blank %}<a href="{{ settings.show_promo_link }}" target="_blank">{% endif %}
    {{ settings.promo_text }}

    {% if settings.show_promo_link != blank %}</a>{% endif %}
    <button class="absolute right-4 top-1/2 transform -translate-y-1/2 text-white-content hover:opacity-75" onclick="this.parentElement.style.display='none'">
      <span class=" pr-2 text-4xl font-light">Ã—</span>
    </button>
  </div>
{% endif %}
<div class="relative b-header__wrapper py-1 bg-[#E6E6FA] md:px-8">
  <div class="b-header__inner mx-auto px-8 py-4 flex justify-between items-center">
    <button class="lg:hidden text-core hover:text-gray-600" data-mobile-menu-toggle>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <nav class="b-header__nav-left hidden lg:block">
      <ul class=" flex space-x-8 uppercase text-sm gap-16">
        {% for link in linklists.main-menu.links %}
          <li class="menu-item">
            <a 
              href="{{ link.url }}" 
              class="text-core hover:text-gray-600 {% if link.active %}text-gray-600{% endif %}"
            >
              {{ link.title }}
              {%- if link.links.size > 0 -%}+{%- endif -%}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>

    <div class="b-header__logo flex-1 lg:flex-none text-center lg:text-left lg:mx-12 ">
      <a href="{{ routes.root_url }}" class="inline-flex items-center no-underline">
        {%- if settings.logo != blank -%}
          <img 
            src="{{ settings.logo | image_url }}"
            width="{{ settings.logo_width }}"
            class="h-12 w-auto"
            alt="{{ shop.name }}"
            loading="lazy"
          >
        {%- else -%}
          <span class="text-xl mt-2 md:mt-0 md:text-2xl font-bold">{{ shop.name }}</span>
        {%- endif -%}
      </a>
    </div>

    <div class="flex items-center gap-4 lg:hidden pl-4">
      <a href="{{ routes.cart_url }}" class="text-core uppercase text-sm hover:text-gray-600">
        Cart [ {{ cart.item_count }} ]
      </a>
    </div>

    <div class="hidden lg:flex items-center space-x-8 gap-16">
      {% for link in linklists.utility-menu.links %}
        <a href="{{ link.url }}" class="text-core uppercase text-sm hover:text-gray-600">
          {{ link.title }}
        </a>
      {% endfor %}
      <a href="{{ routes.cart_url }}" class="text-core uppercase text-sm hover:text-gray-600">
        Cart [ {{ cart.item_count }} ]
      </a>
    </div>
  </div>

  <div id="mobileMenu" class="lg:hidden fixed inset-0 bg-[#E6E6FA] z-50 transform -translate-x-full transition-transform duration-300 ease-in-out">
    <div class="p-8">
      <div class="flex justify-between items-center mb-8">
        <button class="text-core hover:text-gray-600" data-mobile-menu-toggle>
          <span class="text-3xl font-thin">x</span>
        </button>
        <div class="flex items-center gap-4">
          <a href="/account" class="text-core uppercase text-sm hover:text-gray-600">ACCOUNT</a>
          <a href="{{ routes.cart_url }}" class="text-core uppercase text-sm hover:text-gray-600">
            Cart [ {{ cart.item_count }} ]
          </a>
        </div>
      </div>

      <nav class="mt-8">
        <div class="mt-12 space-y-4 text-2xl font-extralight">
          {% for link in linklists.main-menu.links %}
            <a href="{{ link.url }}" class="block py-6 text-core hover:text-gray-600 {% if link.active %}text-gray-600{% endif %}">
              {{ link.title }}
            </a>
          {% endfor %}
        </div>

        <div class="mt-8 space-y-4 text-base font-semibold">
          {% for link in linklists.footer.links %}
            <a href="{{ link.url }}" class="block py-2 text-core hover:text-gray-600 {% if link.active %}text-gray-600{% endif %}">
              {{ link.title }}
            </a>
          {% endfor %}
        </div>

      

        <div class="absolute bottom-8 left-8 right-8">
          <a href="{{ settings.mobile_menu_button_link | default: '/shop' }}" class="block w-full py-6 text-center bg-core text-core_light rounded-full transition-all duration-300 hover:text-white hover:bg-hover-gradient hover:bg-gradient-size hover:animate-gradient-wave">
            {{ settings.mobile_menu_button_text | default: 'SHOP DIAPERS' }}
          </a>
          <p class="text-core text-sm font-semibold text-center mt-2">{{ settings.mobile_menu_shipping_text | default: 'FREE SHIPPING ON ALL DIAPERS' }}</p>
        </div>
      </nav>
    </div>
  </div>

</div>


